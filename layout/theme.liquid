<!DOCTYPE html>
<html lang="{{ shop.locale }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ page_title }}</title>
  {% if page_description -%}
    <meta name="description" content="{{ page_description | truncate: 150 }}">
  {%- endif %}

  {{ content_for_header }} <!-- Shopify's required hook for scripts -->

  {{ 'theme.css' | asset_url | stylesheet_tag }}
</head>

<body data-theme="light">

  {% section 'header' %} <!-- Include header section -->

  <main role="main">

    {{ content_for_layout }} <!-- Main content injection -->
    
  </main>

  {% section 'footer' %} <!-- Include footer section -->

  <!-- Theme scripts -->
  {{ 'theme.js' | asset_url | script_tag }}

</body>
  
</html>